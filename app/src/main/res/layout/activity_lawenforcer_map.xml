<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LawenforcerMapActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/finish"
            android:layout_marginTop="50dp"
            android:layout_gravity="top|center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                android:text="Finalizaeaza"/>
        </LinearLayout>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="start|center"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="100dp"
        android:id="@+id/logout"
        android:background="@drawable/ic_arrow_back"/>
    <Button
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/settings"
        android:layout_marginBottom="40dp"
        android:layout_gravity="start|center"
        android:background="@drawable/ic_settings_black"
        android:layout_marginStart="10dp"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/email"
        android:layout_marginTop="20dp"
        android:layout_gravity="start|center"
        android:background="@drawable/ic_email_black"
        android:layout_marginStart="10dp"/>
    <Switch
        android:id="@+id/workingSwitch"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:thumb="@drawable/thumb_selector"
        android:layout_marginTop="20dp"
        android:layout_gravity="top|center"
        app:track="@drawable/track_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primeste solicitari"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/imgExpandable"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_arrow_up_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/citizenInfo"
        android:background="@android:color/white"
        android:layout_marginBottom="26dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:id="@+id/citizenProfileImage"
            android:src="@mipmap/ic_logo"
            android:padding="10dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/citizenName"
                android:textSize="18sp"
                android:paddingBottom="10dp"
                android:paddingTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/citizenPhone"
                android:paddingBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/description_info"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="111dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Descrierea problemei:"/>
        <TextView
            android:id="@+id/description_box"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>
